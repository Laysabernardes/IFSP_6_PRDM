<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#2E7D32</Color>
    <!-- Verde principal -->
    <Color x:Key="PrimaryDark">#1B5E20</Color>
    <!-- Verde escuro -->
    <Color x:Key="PrimaryDarkText">#0A230C</Color>
    <!-- Texto escuro apropriado -->

    <Color x:Key="Secondary">#C8E6C9</Color>
    <!-- Verde clarinho / tom pastel -->
    <Color x:Key="SecondaryDarkText">#2E7D32</Color>

    <Color x:Key="Tertiary">#4CAF50</Color>
    <!-- Verde médio vibrante -->

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Substituindo roxos/pretos do tema original por tons IFSP -->
    <Color x:Key="Magenta">#2E7D32</Color>
    <Color x:Key="MidnightBlue">#1B5E20</Color>
    <Color x:Key="OffBlack">#0D0D0D</Color>

    <!-- Cinzas neutros, coerentes com design IFSP -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    <Color x:Key="Gray300">#CCCCCC</Color>
    <Color x:Key="Gray400">#B3B3B3</Color>
    <Color x:Key="Gray500">#999999</Color>
    <Color x:Key="Gray600">#666666</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2E7D32"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="#B3B3B3"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="#999999"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="#666666"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="#212121"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="#141414"/>
</ResourceDictionary>