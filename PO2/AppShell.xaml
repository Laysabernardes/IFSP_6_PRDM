<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="P02.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:P02.Views"
    Title="P02">

    <TabBar>
        <ShellContent
            Title="Livros"
            ContentTemplate="{DataTemplate views:LivrosPage}"
            Route="LivrosPage" />

        <ShellContent
            Title="Localização"
            ContentTemplate="{DataTemplate views:LocalizacaoPage}"
            Route="LocalizacaoPage" />

        <ShellContent
            Title="Créditos"
            ContentTemplate="{DataTemplate views:CreditosPage}"
            Route="CreditosPage" />
    </TabBar>
</Shell>